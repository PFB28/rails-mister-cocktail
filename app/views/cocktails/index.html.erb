<div class="cards">
<% @cocktails.each do |cocktail| %>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, width: 400, crop: :fill %>')">
    <%= link_to cocktail.name, cocktail %>
  </div>
  <% end %>
</div>

