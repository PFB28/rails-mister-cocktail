<div class="container">
  <div class="card">
    <h2><%= @cocktail.name %></h2>
    <%= cl_image_tag @article.photo.key, width: 400, crop: :fill %>
    <% @cocktail.doses.each do |dose| %>
    <h4><%= dose.ingredient.name %></h4>
    <%= dose.description %>
    <%= link_to 'Delete ingredient', dose_path(dose), method: :delete %>
    <% end %>
    <h3>Add a new dose</h3>
    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.association :ingredient, input_html: { class: "beautiful-dropdown" }, include_hidden: false %>
      <%= f.input :description %>
      <%= f.button :submit, class: "btn btn-primary" %>
    <% end %>
  </div>

  <p><%= link_to 'Back', cocktails_path %></p>
</div>
