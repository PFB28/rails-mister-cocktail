<div class="container">
  <div class="card">
    <h2><%= @cocktail.name %></h2>
    <% @cocktail.doses do |dose| %>
    <%= dose.ingredient.name %>
    <%= dose.description %>
    <p><%= link_to 'Delete ingredient', dose_path(dose), method: :delete %></p>
    <%= render "doses/new", cocktail: @cocktail, dose: @dose %>
    <% end %>
  </div>

  <p><%= link_to 'Back', cocktails_path %></p>
</div>
